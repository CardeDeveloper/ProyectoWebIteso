<!doctype html>
<html lang="en">

<head>
    <title>Inicio de Sesi칩n</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>

    <div class="mt-5">
        <div class="d-flex justify-content-center">
            <h1>Iniciar Sesi칩n</h1>
        </div>
        <div class="d-flex justify-content-center">
            <div class="w-50 p-3">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-at"></i></span>
                    </div>
                    <input type="text" class="form-control" id="InputUser" placeholder="Usuario">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    </div>
                    <input type="password" class="form-control" id="InputPassword" placeholder="Constrase침a">
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-primary" id="btnLogin">Entrar</button>
        </div>



    </div>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">
    </script>

    <!-- JavaScript -->
    <script>
        let users = {
            email: "",
            password: ""
        }
        //URL de Login
        let baseUrl = 'http://localhost:3000/api/login';
        let btnLogin = document.getElementById("btnLogin");
        //Login 
        btnLogin.addEventListener("click", function (event) {
            event.preventDefault();
            users = {
                email: document.getElementById("InputUser").value,
                password: document.getElementById("InputPassword").value
            }
            loginUser(users);
        });

        //Token
        function loginUser(datos) {
            let xhr = new XMLHttpRequest();
            xhr.open('POST', baseUrl);
            xhr.setRequestHeader('Content-Type', 'application/json');
            xhr.send([JSON.stringify(datos)]);
            xhr.onload = function () {
                if (xhr.status != 200) {
                    alert(xhr.status + ': ' + xhr.statusText);
                } else {
                    let responseJSON = JSON.parse(xhr.responseText);
                    sessionStorage.setItem('token', responseJSON.data.token);
                    sessionStorage.setItem('type', responseJSON.data.user.type);

                    //Redirecci칩n de usuarios 
                    let userType = sessionStorage.getItem("type");
                    if (userType == 0) {
                        window.location.href = "http://localhost:3000/ordenes";
                    } else{
                        window.location.href = "http://localhost:3000/admin/productos";
                    }

                }
            };
        }
    </script>
</body>

</html>